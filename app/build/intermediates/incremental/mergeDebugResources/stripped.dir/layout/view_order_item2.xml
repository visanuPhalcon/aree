<?xml version="1.0" encoding="utf-8"?>
                                                            
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:tag="layout/view_order_item2_0" xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            app:layout_widthPercent="57%"
            android:layout_alignParentLeft="true"
            android:id="@+id/tvMenuName"
            style="@style/AppTheme.Text.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorGrey"
            android:text="Name"/>


        <TextView
            android:gravity="center"
            android:layout_toRightOf="@id/tvMenuName"
            app:layout_widthPercent="13%"
            android:id="@+id/tvAmount"
            style="@style/AppTheme.Text.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey"
            android:text=""/>

        <TextView
            android:gravity="right"
            app:layout_widthPercent="30%"
            android:id="@+id/tvPrice"
            style="@style/AppTheme.Text.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorGrey"
            android:layout_centerVertical="true"
            android:text="Price"/>
    </android.support.percent.PercentRelativeLayout>




</LinearLayout>
         