<?xml version="1.0" encoding="utf-8"?>
                                                            
    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/row_summary_sale_admin_0" xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:textSize="16sp"
            android:text=""
            android:layout_alignParentLeft="true"
            android:layout_margin="16dp"
            android:id="@+id/tvDate"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

        <TextView
            app:layout_widthPercent="35%"
            android:text=""
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/tvDate"
            android:id="@+id/tvCustomerName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />


        <TextView
            android:layout_alignBaseline="@+id/tvCustomerName"
            android:textColor="@color/colorOrange"
            android:textSize="14sp"
            android:text="ส่งสำเร็จ"
            android:layout_toRightOf="@+id/tvCustomerName"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/tvStatus"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

        <TextView
            app:layout_widthPercent="22%"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text=""
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/tvTotal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            />

    </android.support.percent.PercentRelativeLayout>
         