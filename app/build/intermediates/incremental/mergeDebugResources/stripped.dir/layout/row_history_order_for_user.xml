<?xml version="1.0" encoding="utf-8"?>
                                                            
<android.support.percent.PercentRelativeLayout
    android:id="@+id/row"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp" android:tag="layout/row_history_order_for_user_0" xmlns:app="http://schemas.android.com/apk/res-auto">


    <!--<ImageView-->
        <!--android:src="@drawable/ic_keyboard_arrow_left_white_48dp"-->
        <!--android:tint="@color/colorOrange"-->
        <!--android:id="@+id/imgRollBack"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_width="40dp"-->
        <!--/>-->




    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/tvCustomerName"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:ellipsize="end"
        android:maxLength="25"
        android:maxLines="2"
        android:text="tvCustomerName"
        app:layout_widthPercent="40%"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />

    <TextView
        android:layout_alignLeft="@+id/tvCustomerName"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tvCustomerName"
        android:id="@+id/tvID"
        android:textSize="14sp"
        app:layout_marginTopPercent="1%"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:ellipsize="end"
        android:maxLength="25"
        android:maxLines="2"
        android:text="tvID"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />

    <TextView
        android:layout_alignLeft="@+id/tvCustomerName"
        android:id="@+id/tvTotal"
        android:layout_below="@+id/tvID"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:gravity="right"
        android:text="tvTotal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />

    <Button
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:id="@+id/btnOrder"
        app:layout_marginTopPercent="2%"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="@string/label_order"
        style="@style/AppTheme.Button.Orange"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_height="40dp"
        android:layout_width="80dp"
        />

</android.support.percent.PercentRelativeLayout>
         